generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  username       String
  email          String   @unique
  hashedPassword String

  age            Int?
  gender         String?
  weightLbs      Float?
  goalWeightLbs  Float?
  heightInches   Float?
  goalText       String?
  dietPlan       String?

  waistInches    Float?
  chestInches    Float?
  hipsInches     Float?
  armInches      Float?
  thighInches    Float?

  progressNotes  ProgressNote[]  

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ProgressNote {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])

  date      DateTime
  title     String
  note      String

  createdAt DateTime @default(now())
}
